<Window x:Class="LsCostume_GUI.DolgozttOrakWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LsCostume_GUI"
        mc:Ignorable="d"
        Title="Dolgozott órák száma" Height="150" Width="300" Background="#1E1E2F" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Dolgozott órák száma" FontSize="20" Foreground="White"/>
            <TextBox x:Name="DolgozottOrakSzama" Margin="0,10"/>
            <Button Content="Mentés" Background="Cyan" Foreground="White" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
