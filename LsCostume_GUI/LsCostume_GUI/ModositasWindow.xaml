<Window x:Class="LsCostume_GUI.ModositasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LsCostume_GUI"
        mc:Ignorable="d"
        Title="Adatok Módosítása" Height="450" Width="400" Background="#1E1E2F" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <StackPanel x:Name="Alap" >
                <TextBlock Text="Adatok Módosítása" Foreground="White" FontSize="30" Margin="10"  />
            </StackPanel>
            <StackPanel>
                <Button Content="Mentés" Background="Cyan" Foreground="White" Margin="10" Click="MentesButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
